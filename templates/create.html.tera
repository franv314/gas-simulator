<!DOCTYPE html>
<html lang="it">
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="/styles/create.css">
    <script src="/scripts/jsonform.js"></script>
    <script src="/scripts/create.js"></script>
    <title>Create a new contest</title>
  </head>
  <body>
    <form id="create" action="/api/contests" method="post">
      <label for="phiquadro_id">
        ID della gara su PhiQuadro
      </label>
      <input name="phiquadro_id" id="phiquadro_id" type="number" required>

      <label for="phiquadro_sess">
        Sessione della gara su PhiQuadro
      </label>
      <input name="phiquadro_sess" id="phiquadro_sess" type="number" value="1" required>

      <label for="name">
        Nome della simulazione
      </label>
      <input name="name" id="name" type="text" placeholder="se bianco, Ã¨ il nome della gara">

      <label for="start_time">
        Orario di partenza
      </label>
      <input name="start_time" id="start_time" type="datetime-local"  type="number" required>

      <label for="duration">
        Durata (minuti)
      </label>
      <input name="duration" id="duration" type="duration" required>

      <label for="drift">
        Deriva
      </label>
      <input name="drift" id="drift" type="number" value="3" required>

      <label for="drift_time">
        Durata deriva (minuti)
      </label>
      <input name="drift_time" id="drift_time"  type="number" required>

      <label id="submit-label" for="submit" hidden>
        Crea!
      </label>
      <input id="submit" type="submit" value="Crea!">
    </form>
 </body>
</html>
